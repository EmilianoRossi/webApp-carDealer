        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href=".\css/site.css" rel="stylesheet" />
    </head>
  
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark" id="mainNav">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("IndexAdmin" , "Car")">CAR DEALER</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link  text-warning" href="#services">Rifornimento</a></li>
                        
                    </ul>
                </div>
            </div>
            
        </nav>

<body class="bg-white" style="position:relative; height: 100%; background-size:cover; box-shadow:inset 0 -1px 5px;">
    <main>
    
    <div class="container">
        
                
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Riforniment auto</h2>
            <h3 class="section-subheading text-muted">Effettua il rifornimento dell'auto selezionata'</h3>
        </div>
        </div>
                
        <form action="@Url.Action("Refile", "Car")" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group col-md-6">
                <h5>Nome fornitore:</h5>
                <input asp-for="NameSupplier" class="d-block w-100 text-black" />
                <span asp-validation-for="NameSupplier" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <h5>Quantità:</h5>
                <input asp-for="Quantity" min="0" class="d-block w-100" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div> 
            <div class="text-start">
                <input type="submit" class="btn btn-small btn-primary" value="Salva">
            </div>
                

        </form>
          
    </main>
</body>

